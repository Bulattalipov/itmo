                                <a href="https://media.w3.org/2010/05/sintel/trailer.mp4" data-fancybox>
                                    <img class="inline" width="520" alt="" src="img/content/quote/video-bg.jpg"/>
                                    <div class="quote-single__item-video-box">
                                        <div class="quote-single__item-video-time">
                                            3:24
                                        </div>  
                                        <div class="quote-single__item-video-content">
                                            <span>
                                                Мой опыт обучения на факультете безопасности
                                            </span>
                                            <div class="quote-single__item-video-content-play">
                                                <svg width="15" height="17">
                                                    <use xlink:href="#play" />
                                                </svg>
                                            </div>
                                        </div>       
                                    </div>
                                </a>
                            </div>
