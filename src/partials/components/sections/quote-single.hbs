    <div class="quote-single">
        <h2 class="quote-single__title title-h2">
            Отзывы выпускников
        </h2>
        <div class="quote-single__slider">
            <div class="quote-single__swiper swiper loading">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="quote-single__item">
                            <div class="quote-single__navigation slider-pagination-btns">
                                <button class="slider-pagination-btns__button prev" type="button" title="Prev">
                                    <svg width="8" height="16">
                                        <use xlink:href="#arrow-slide" />
                                    </svg>
                                </button>
                                <button class="slider-pagination-btns__button next" type="button" title="Next">
                                    <svg width="8" height="16">
                                        <use xlink:href="#arrow-slide" />
                                    </svg>
                                </button>
                            </div>
                            {{> components/quote-user column=true}}
