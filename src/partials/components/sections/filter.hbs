                    <div class="filter__tabs-content-box js-tab-body">
                        <fieldset class="filter__form-selects filter__form-selects--column">
                            <div class="filter__form-input-wrapper">
                                <input class="filter__form-input" type="text" placeholder="Поиск по названию">
                                <span class="filter__form-input-placeholder">Поиск по названию</span>
                                <span class="filter__form-input-search">
                                    <svg width="20" height="20">
                                        <use xlink:href="#search" />
                                    </svg>
                                </span>
                            </div>
                            <div class="filter__form-selects-inner">
                                <select class="filter__from-select js-choice-select">
                                    <option value="Все года"></option>
                                    <option value="Все года 2"></option>
                                    <option value="Все года 3"></option>
                                    <option value="Все года 4"></option>
                                </select>
                                <select class="filter__from-select js-choice-select">
                                    <option value="Категория участников"></option>
                                    <option value="Категория участников 2"></option>
                                    <option value="Категория участников 3"></option>
                                    <option value="Категория участников 4"></option>
                                    <option value="Категория участников 5"></option>
                                </select>
                                <select class="filter__from-select js-choice-select">
                                    <option value="Формат участия"></option>
                                    <option value="Формат участия 2"></option>
                                    <option value="Формат участия 3"></option>
                                </select>
                            </div>
                        </fieldset>
                        <fieldset class="filter__footer">
                            <div class="filter__footer-list">
                                <label class="filter__footer-list-item">
                                    <input class="filter__footer-list-item-input" type="checkbox" checked>
                                    <span class="filter__footer-list-item-text">Все</span>
                                </label>
                                <label class="filter__footer-list-item">
                                    <input class="filter__footer-list-item-input" type="checkbox">
                                    <span class="filter__footer-list-item-text">Соревнования</span>
                                </label>
                                <label class="filter__footer-list-item">
                                    <input class="filter__footer-list-item-input" type="checkbox">
                                    <span class="filter__footer-list-item-text">Олимпиады</span>
                                </label>
                                <label class="filter__footer-list-item">
                                    <input class="filter__footer-list-item-input" type="checkbox">
                                    <span class="filter__footer-list-item-text">Хакатоны</span>
                                </label>
                                <label class="filter__footer-list-item">
                                    <input class="filter__footer-list-item-input" type="checkbox">
                                    <span class="filter__footer-list-item-text">День открытых дверей</span>
