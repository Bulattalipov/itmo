<ul class="main-menu">
    {{#each menu.header}}
        <li class="main-menu__item">
            <a class="main-menu__link {{#if this.active}}active{{/if}}" href="{{this.link}}">{{this.name}}</a>
            {{#if this.secondMenu}}
            <div class="main-menu__second-box">
                <ul class="main-menu__second">
                    {{#each this.secondMenu}}
                    <li class="main-menu__second-item">
                        <a class="main-menu__second-link" href="{{this.link}}">
                            {{this.name}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
        </li>
    {{/each}}
</ul>